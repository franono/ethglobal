{
  "compilerOptions": {
    "lib": [
      "es5",
      "es6",
      "dom"
    ],
    "target": "es6",
    "skipLibCheck": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "baseUrl": ".",
    "typeRoots": [
      "node_modules/@types",
      "@types"
    ],
    "outDir": "dist"
  },
  "include": [
    "src/**/*"
  ]
}
